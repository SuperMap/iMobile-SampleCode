<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <com.supermap.mapping.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <Button
        android:text="清空"
        android:textSize="10dp"
        android:id="@+id/btn_clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="25dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>
    <Button
        android:text="添加点"
        android:textSize="10dp"
        android:id="@+id/btn_pt"
        android:layout_toRightOf="@id/btn_clear"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>
    <Button
        android:text="添加线"
        android:textSize="10dp"
        android:id="@+id/btn_line"
        android:layout_toRightOf="@id/btn_pt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>
    <Button
        android:text="添加面"
        android:textSize="10dp"
        android:id="@+id/btn_region"
        android:layout_toRightOf="@id/btn_line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>

    <Button
        android:text="实时渲染"
        android:textSize="10dp"
        android:id="@+id/btn_syn"
        android:layout_toRightOf="@id/btn_region"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>

    <!--<include layout="@layout/content_main" />-->

