<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
  	<shape>
  		<!-- 渐变 -->
	  	<gradient
	  		android:startColor="#b8eff9"
	  		android:endColor="#45cee9"
	  		android:type="linear"
	  		android:angle="270"/>
  		<!-- 描边-->
  		<stroke
  			android:width="1dp"
  			android:color="#2d899e"/> 
  		<!-- 圆角 -->
  		<corners
  			android:radius="5dp"/>
		<padding
	    	android:left="0dp"
	    	android:top="0dp"
	    	android:right="0dp"
	    	android:bottom="0dp">
   		</padding>
			
  	</shape>
  </item>
</selector>