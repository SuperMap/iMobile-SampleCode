<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AnimationActivity" parent="@android:style/Animation.Activity" mce_bogus="1">    
		<item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>          
		<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>              
	</style>   

    <style name="DialogCenterAnimation" parent="@android:style/Animation.Dialog">
            <item name="android:windowEnterAnimation">@anim/show_dialog_from_center</item>
            <item name="android:windowExitAnimation">@anim/hide_dialog_from_center</item>
    </style>

</resources>